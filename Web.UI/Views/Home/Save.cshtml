@model Book
@{
    ViewData["Title"] = "Registeration";
}

<h1 class=" text-center text-uppercase text-secondary">Book Entry Form</h1>
<div class="pt-3 pr-5 pb-5 row justify-content-center align-items-center">

    <form asp-controller="Home" asp-action="Save" method="post" class="h-50 w-50 pr-5 ">
        <div class="form-group">
            <label class="text-dark" asp-for="Title"></label> <span class="small">&#40;required&#41;</span>
            <input asp-for="Title" class="form-control box-shadow" />
            <small><span asp-validation-for="Title" class="text-danger"></span></small>
        </div>

        <div class="form-group">
            <label asp-for="Isbn"></label> <span class="small">&#40;required&#41;</span>
            <input asp-for="Isbn" class="form-control" type="number" />
            <small><span asp-validation-for="Isbn" class="text-danger"></span></small>
        </div>

        <div class="form-group">
            <label asp-for="Language"></label> <span class="small">&#40;optional&#41;</span>
            <input asp-for="Language" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Author"></label> <span class="small">&#40;optional&#41;</span>
            <input asp-for="Author" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Price"></label> <span class="small">&#40;optional&#41;</span>
            <input asp-for="Price" class="form-control" type="number" />
        </div>

        <div class="form-group">
            <label asp-for="Remarks"></label> <span class="small">&#40;optional&#41;</span>
            <textarea asp-for="Remarks" class="form-control" rows="3"></textarea>
        </div>

        <button class="btn btn-success btn-block" type="submit">Save</button>
    </form>

</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}